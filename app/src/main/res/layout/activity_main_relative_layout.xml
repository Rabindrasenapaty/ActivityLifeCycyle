<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="8dp"
        android:text="Manga Reader"
        android:layout_alignParentTop="true"
        android:textColor="#660000"
        android:textSize="25sp"
        android:textStyle="italic"
        android:id="@+id/txtLayoutHeader"

        />

    <TextView
        android:id="@+id/txtSublayoutheader"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:padding="2sp"
        android:text="by King Nexus"
        android:textSize="25dp"
        android:minHeight="20dp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        />

    <ImageView
        android:id="@+id/imgeyes"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="90dp"
        android:padding="4dp"
        android:src="@drawable/eyes"
        android:layout_below="@+id/txtLayoutHeader"
        />

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:text="Log in"
        android:textStyle="bold"
        android:textColor="#4994f1"
        android:textSize="18sp"
        android:layout_below="@+id/etpassword"/>

    <Button
        android:id="@+id/btnforgetpassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnlogin"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:text="Forgot Password?"
        android:textColor="@color/black"

        android:textStyle="bold" />

    <EditText
        android:id="@+id/etemailaddress"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:textColor="@color/white"
        android:textColorHint="#A1887F"
        android:layout_below="@+id/imgeyes"/>

    <EditText
        android:id="@+id/etpassword"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:minHeight="48dp"
        android:layout_below="@+id/etemailaddress"/>
</RelativeLayout>